{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A radial plot showing the top 10 countries with the most universities, with a legend for the countries and interactivity.",
    "data": {
      "url": "https://raw.githubusercontent.com/dyarmsh/FIT3179-Week-9-Homework/main/num_universities.csv",
      "format": {"type": "csv"}
    },
    "transform": [
      {
        "aggregate": [{"op": "sum", "field": "Count", "as": "TotalUniversities"}],
        "groupby": ["Country"]
      },
      {
        "window": [{"op": "rank", "as": "rank"}],
        "sort": [{"field": "TotalUniversities", "order": "descending"}]
      },
      {
        "filter": "datum.rank <= 10"
      }
    ],
    "mark": {
      "type": "arc",
      "innerRadius": 50,
      "stroke": "#fff",
      "strokeWidth": 1,
      "tooltip": true
    },
    "encoding": {
      "theta": {
        "field": "TotalUniversities",
        "type": "quantitative",
        "stack": true
      },
      "radius": {
        "field": "TotalUniversities",
        "scale": {"type": "sqrt", "zero": true, "rangeMin": 50}
      },
      "color": {
        "field": "Country",
        "type": "nominal",
        "legend": {
          "title": "Country",
          "orient": "right"
        }
      },
      "tooltip": [
        {"field": "Country", "type": "nominal", "title": "Country"},
        {"field": "TotalUniversities", "type": "quantitative", "title": "Number of Universities"}
      ]
    },
    "view": {"stroke": null},
    "config": {
      "arc": {
        "fillOpacity": 0.8
      }
    }
  }
  