{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A radial plot showing the top 10 countries with the most universities, arranged by size, with a legend for the countries and interactivity.",
  "width": 300,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/dyarmsh/FIT3179-Week-9-Homework/main/num_universities.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "aggregate": [{"op": "sum", "field": "Count", "as": "TotalUniversities"}],
      "groupby": ["Country"]
    },
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "TotalUniversities", "order": "descending"}]
    },
    {
      "filter": "datum.rank <= 10"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "arc",
        "innerRadius": 50,
        "stroke": "#fff",
        "strokeWidth": 1,
        "tooltip": true
      },
      "encoding": {
        "theta": {
          "field": "TotalUniversities",
          "type": "quantitative",
          "stack": true
        },
        "radius": {
          "field": "TotalUniversities",
          "scale": {"type": "sqrt", "zero": true, "rangeMin": 50}
        },
        "color": {
          "field": "Country",
          "type": "nominal",
          "legend": {
            "title": "Country",
            "orient": "right",
            "titleFontSize": 14,
            "labelFontSize": 12
          }
        },
        "order": {
          "field": "TotalUniversities",
          "type": "quantitative",
          "sort": "descending"
        },
        "opacity": {
          "condition": {
            "param": "click",
            "value": 1
          },
          "value": 0.1
        },
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "TotalUniversities", "type": "quantitative", "title": "Number of Universities"}
        ]
      },
      "selection": {
        "click": {
          "type": "multi",
          "fields": ["Country"],
          "bind": "legend"
        }
      }
    },
    {
      "mark": {"type": "text", "radiusOffset": 10, "align": "center", "baseline": "middle"},
      "encoding": {
        "text": {
          "field": "TotalUniversities",
          "type": "quantitative"
        },
        "theta": {
          "field": "TotalUniversities",
          "type": "quantitative",
          "stack": true
        },
        "radius": {
          "field": "TotalUniversities",
          "scale": {"type": "sqrt", "zero": true, "rangeMin": 50}
        },
        "order": {
          "field": "TotalUniversities",
          "type": "quantitative",
          "sort": "descending"
        },
        "color": {
          "field": "Country",
          "type": "nominal",
          "legend": null
        }
      }
    }
  ],
  "view": {"stroke": null},
  "config": {
    "arc": {
      "fillOpacity": 0.8
    }
  }
}
