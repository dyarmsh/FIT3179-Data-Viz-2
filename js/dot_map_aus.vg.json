{
  "width": 500,
  "height": 500,
  "config": {
    "legend": {
      "labelFontSize": 12,
      "titleFontSize": 14,
      "titleFontWeight": "bold",
      "symbolSize": 150,
      "padding": 10
    }
  },
  "params": [
    {
      "name": "size_filter",
      "value": "All",
      "bind": {
        "input": "select",
        "options": ["All", "S", "M", "L", "XL"],
        "labels": ["All", "Small", "Medium", "Large", "Extra Large"],
        "name": "University Size: "
      }
    },
    {
      "name": "age_filter",
      "value": "All",
      "bind": {
        "input": "select",
        "options": ["All", "1", "2", "3", "4", "5"],
        "labels": ["All", "1", "2", "3", "4", "5+"],
        "name": "University Age: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/dyarmsh/FIT3179-Data-Viz-2/refs/heads/main/js/aus_states.topojson",
        "format": {
          "type": "topojson",
          "feature": "austates"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f0f0f0",
        "stroke": "#e0e0e0",
        "strokeWidth": 1.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/dyarmsh/FIT3179-Data-Viz-2/refs/heads/main/data/aus_universities_cleaned.csv",
        "format": {
          "type": "csv"
        }
      },
      "transform": [
        {
          "filter": "size_filter == 'All' || datum.SIZE == size_filter"
        },
        {
          "filter": "age_filter == 'All' || (age_filter == '5' ? +datum.AGE >= 5 : datum.AGE == age_filter)"
        },
        {
          "window": [
            {
              "op": "row_number",
              "as": "Australian Rank"
            }
          ],
          "sort": [{"field": "2024 RANK", "order": "ascending"}]
        }
      ],
      "mark": {
        "type": "circle",
        "opacity": 0.7
      },
      "encoding": {
        "longitude": {
          "field": "Longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Latitude",
          "type": "quantitative"
        },
        "size": {
          "value": 100
        },
        "color": {
          "field": "State",
          "type": "nominal",
          "scale": {
            "scheme": "category10"
          },
          "legend": {
            "title": "State",
            "orient": "left",
            "titleFontSize": 14,
            "labelFontSize": 12,
            "symbolSize": 150
          }
        },
        "opacity": {
          "condition": {
            "param": "click",
            "value": 0.8
          },
          "value": 0.1
        },
        
        "tooltip": [
          {
            "field": "Institution Name",
            "type": "nominal",
            "title": "University"
          },
          {
            "field": "State",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "City",
            "type": "nominal",
            "title": "City"
          },
          {
            "field": "Australian Rank",
            "type": "quantitative",
            "title": "2024 Australian Rank"
          },
          {
            "field": "2024 RANK",
            "type": "quantitative",
            "title": "2024 Rank"
          },
          {
            "field": "SIZE",
            "type": "nominal",
            "title": "Size"
          },
          {
            "field": "AGE",
            "type": "ordinal",
            "title": "Age"
          }
        ]
      },
      "selection": {
        "click": {
          "type": "multi",
          "fields": ["State"],
          "bind": "legend"
        }
      }
    }
  ]
}