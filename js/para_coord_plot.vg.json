{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Parallel coordinates plot for the top 10 Australian universities based on several scores.",
  "width": 800,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/dyarmsh/FIT3179-Data-Viz-2/refs/heads/main/data/aus_universities_cleaned.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {"filter": "datum['Country'] == 'Australia'"},
    {"window": [{"op": "rank", "as": "Rank"}], "sort": [{"field": "Rank", "order": "ascending"}]},
    {"filter": "datum['Rank'] <= 10"},
    {"window": [{"op": "row_number", "as": "Australian Rank"}]},
    {"fold": [
      "Academic Reputation Score",
      "Employer Reputation Score",
      "Faculty Student Score",
      "Citations per Faculty Score",
      "International Faculty Score",
      "International Students Score",
      "Employment Outcomes Score"
    ]},
    {
      "calculate": "toNumber(datum.value)", 
      "as": "value"
    }
  ],
  "layer": [
    {
      "mark": {"type": "rule", "color": "#ccc"},
      "encoding": {
        "detail": {"aggregate": "count"},
        "x": {
          "field": "key",
          "axis": {
            "labelAngle": 50
          }
        }
      }
    },
    {
      "mark": {
        "type": "line",
        "strokeWidth": 2  
      },
      "encoding": {
        "color": {"type": "nominal", "field": "Institution Name"},
        "detail": {"type": "nominal", "field": "index"},
        "opacity": {
          "condition": {
            "param": "click",
            "value": 1
          },
          "value": 0.1
        },
        "x": {
          "type": "nominal",
          "field": "key",
          "axis": {
            "labelAngle": 0               
          }
        },
        "y": {
          "type": "quantitative", 
          "field": "value", 
          "axis": {
            "title": "Scores",
            "labelFontSize": 12,
            "titleFontSize": 14,
            "grid": true 
          }
        },
        "tooltip": [
          {"field": "Institution Name", "type": "nominal"},
          {"field": "Academic Reputation Score", "type": "quantitative"},
          {"field": "Employer Reputation Score", "type": "quantitative"},
          {"field": "Faculty Student Score", "type": "quantitative"},
          {"field": "Citations per Faculty Score", "type": "quantitative"},
          {"field": "International Faculty Score", "type": "quantitative"},
          {"field": "International Students Score", "type": "quantitative"},
          {"field": "Employment Outcomes Score", "type": "quantitative"}
        ]
      },
      "selection": {
        "click": {
          "type": "multi",
          "fields": ["Institution Name"],
          "bind": "legend"
        }
      }
    },
    {
      "mark": {
        "type": "point",
        "filled": true,
        "size": 60, 
        "stroke": "black", 
        "strokeWidth": 0 
      },
      "encoding": {
        "color": {"type": "nominal", "field": "Institution Name"},
        "opacity": {"value": 0.4},
        "x": {
          "type": "nominal",
          "field": "key",
          "axis": {
            "labelAngle": 0     
          }
        },
        "y": {
          "type": "quantitative", 
          "field": "value", 
          "axis": {
            "title": "Scores",
            "labelFontSize": 12,
            "titleFontSize": 14,
            "grid": true 
          }
        },
        "tooltip": [
          {"field": "Institution Name", "type": "nominal"},
          {
            "field": "Australian Rank",
            "type": "quantitative",
            "title": "2024 Australian Rank"  
          },
          {
            "field": "2024 RANK",
            "type": "quantitative",
            "title": "2024 Global Rank"
          }
        ]
      }
    }
  ]
}
